{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": [
    "App.js",
    "app",
    "mocks",
    "storybook",
    "metro.config.js",
    "jest.*.ts",
    "jest.*.js",
    "app.config.js",
    "babel.config.js",
    "jest.setup.js"
  ],
  "extends": "expo/tsconfig.base"
}
